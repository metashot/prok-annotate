process {

    errorStrategy = 'terminate'

    withName: prokka {
        container = 'metashot/prokka:1.14.5-3'
        cpus = check_max(4, params.max_cpus)
        memory = { check_max(2.GB * (2**(task.attempt-1)), params.max_memory) }
        time = params.max_time
        errorStrategy = 'retry'
        maxRetries = 3
    }

    withName: eggnog_mapper {
        container = 'metashot/eggnog-mapper:2.0.1-3'
        cpus = { check_max(4, params.max_cpus) }
        memory = { check_max(8.GB * (2**(task.attempt-1)), params.max_memory) }
        time = params.max_time
        errorStrategy = 'retry'
        maxRetries = 2
    }

    withName: kofamscan {
        container = 'metashot/kofamscan:1.3.0-1'
        cpus = { check_max(4, params.max_cpus) }
        memory = { check_max(4.GB * (2**(task.attempt-1)), params.max_memory) }
        time = params.max_time
        errorStrategy = 'retry'
        maxRetries = 3
    }

}
